
$fontSize = 37.5
px2rem(px){
    return px / $fontSize * 1rem;
}
center()
    justify-content: center
    align-items: center
indexTitle()
    font-size: px2rem(14)
    border-left: px2rem(4) solid #ff3b44
    padding-left px2rem(6)
    padding-bottom px2rem(2)
    margin  px2rem(10)
ellipsis()
    overflow: hidden
    white-space: nowrap
    text-overflow: ellipsis
ellipsisTwo()
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
header()
    height px2rem(44)
    background $blue
    line-height px2rem(44)
    color #ffffff
    font-size px2rem(16)
    padding 0 px2rem(16)